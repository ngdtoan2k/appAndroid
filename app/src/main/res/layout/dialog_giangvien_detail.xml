<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="6dp"
        android:radius="16dp"
        android:padding="20dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgGiangVien"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/userimg"
                android:padding="4dp"
                android:background="#FFCCCC"
                android:layout_marginTop="180dp"/>

            <TextView
                android:id="@+id/tvTenGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Tên: Trần Văn C"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvChuyenMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvGioiTinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvThamNien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvMoTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvDanhSachMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textStyle="italic"
                android:layout_marginTop="4dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCC"
                android:layout_marginTop="8dp"
                android:gravity="start"
                android:layout_gravity="start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edtBinhLuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nhập bình luận..."
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:textSize="12sp"
                    android:gravity="top"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnGuiBinhLuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi"
                    android:textSize="14sp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewComment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</ScrollView>

