<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:elevation="4dp"
    android:layout_marginBottom="12dp">


<TextView
android:id="@+id/txtTenKH"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Tên khóa học"
android:textStyle="bold"
android:textSize="20sp"
android:textColor="#333"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ngày Bắt Đầu - Kết Thúc -->
<TextView
android:id="@+id/txtNgay"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Ngày bắt đầu - kết thúc"
android:textColor="#666"
app:layout_constraintTop_toBottomOf="@id/txtTenKH"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="8dp" />

    <!-- Trạng Thái Kích Hoạt -->
<TextView
android:id="@+id/txtTrangThai"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Kích hoạt / Chưa kích hoạt"
android:textColor="#2196F3"
app:layout_constraintTop_toBottomOf="@id/txtNgay"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="8dp" />

    <!-- Giảng Viên -->
<TextView
android:id="@+id/txtGiangVien"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Giảng viên: Nguyễn Văn A"
android:visibility="gone"
android:textColor="#444"
app:layout_constraintTop_toBottomOf="@id/txtTrangThai"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="8dp" />

    <!-- Mô Tả -->
<TextView
android:id="@+id/txtMoTa"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Mô tả: Đây là khóa học lập trình..."
android:visibility="gone"
android:textColor="#444"
app:layout_constraintTop_toBottomOf="@id/txtGiangVien"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

